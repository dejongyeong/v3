{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"]
    },
    "types": ["vitest/globals"],
    "removeComments": false, // remove comments when converting to js
    "preserveConstEnums": true, // preserve const enums when converting to js
    "noUncheckedIndexedAccess": true, // add undefined to any undeclared field in the type
    "noImplicitReturns": true, // check all code paths to ensure they return a value
    "noUnusedParameters": true, // reports errors on unused parameters in functions
    "allowUnreachableCode": false, // raise compiler errors about unreachable code
    "noFallthroughCasesInSwitch": true // prevent case fallthrough bug
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./out/**/*",
    "**/*.spec.ts",
    "**/*.e2e.ts"
  ]
}
